{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["esnext", "dom", "dom.iterable", "ESNext.Disposable"],
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "libdefs/globals"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["."],
  "exclude": [
    "./libdefs/*.cjs",
    "**/build/**",
    "**/dist/**",
    "**/npm/**",
    "**/node_modules/**"
  ],
  "ts-node": {
    "require": [],
    "transpileOnly": true,
    "esm": false,
    "compilerOptions": {
      "module": "nodenext",
      "moduleResolution": "nodenext"
    }
  }
}
